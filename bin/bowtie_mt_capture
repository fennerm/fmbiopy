#!/bin/sh

# Preset for capturing all reads which map to mitochondria.
# Large insert size required for reads which align across the circular junction
INDEX="$1"
FWD="$2"
REV="$3"
OUTSAM="$4"
shift
shift
shift
shift
bowtie2 --no-unal --maxins 100000 -p 40 --very-sensitive -x "$INDEX" -1 "$FWD" -2 "$REV" -S "$OUTSAM" "$@"
sam_to_bam "$OUTSAM"
